			<connectBy>peste</connectBy>
			<cmd>tail -500 /girdi/ARECA_DEPLOYMENT/areca/log/areca.out</cmd>
		</command>

		<command id="C2" name="Hata logu">
			<connectBy>peste</connectBy>
			<cmd>tail -50 /girdi/ARECA_DEPLOYMENT/areca/log/areca.err</cmd>
		</command>

		<command id="C3" name="Log">
			<connectBy>peste</connectBy>
			<cmd>tail -50 /girdi/ARECA_DEPLOYMENT/areca/log/areca.out</cmd>
		</command>

		<command id="NotDelay" name="Bildirimdeki Gecikme">
			<connectBy>sinan</connectBy>
			<cmd>select notification_date, triggering_event_date from
				arc_abone_bildirim where notification_date like '#today%'</cmd>
		</command>
	</commands>
</config>