<?xml version="1.0" encoding="UTF-8"?>
<reports>
	<report id="DBCheck" mail="me" sms="me" period="5">
		<name>H2 DB Kontrol</name>
		<executeList>
			<cmd>cmd3.1</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd3.1">^$</condition>
		</reportCondition>
	</report>

	<report id="RptDaily" mail="areca" period="-1">
		<name>KMSH/FÜS Bildirim Raporu</name>
		<executeList>
			<cmd>cmd3.1</cmd>
			<cmd>UpTime</cmd>
			<cmd>TotalUpTime</cmd>
			<cmd>AveBildirim</cmd>
			<cmd>MinBildirim</cmd>
			<cmd>MaxBildirim</cmd>
			<cmd>ToplamBildirim</cmd>
			<cmd>KMSH</cmd>
			<cmd>KMSH80</cmd>
			<cmd>KMSH100</cmd>
			<cmd>FUS</cmd>
			<cmd>cmd1.14</cmd>
		</executeList>
	</report>

	<report id="KMSHStopped" mail="areca" sms="me" period="5">
		<name>KMSH/FÜS Stopped</name>
		<executeList>
			<cmd>cmd3.1</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd3.1">(.*)stopped(.*)</condition>
		</reportCondition>
	</report>

	<report id="KMSHStarted" mail="areca" sms="me" period="5">
		<name>KMSH/FÜS Started</name>
		<executeList>
			<cmd>cmd2.4</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd2.4">(.*)running(.*)</condition>
		</reportCondition>
	</report>

	<report id="PartitionControl" mail="areca" sms="me" period="15">
		<name>KMSH Partition Hatası !!!</name>
		<executeList>
			<cmd>cmd1.13</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd1.13">(.*)Partition error(.*)
			</condition>
		</reportCondition>
		<note>Acil olarak mustafa.samatli@turktelekom.com.tr'ye e-mail
			ile
			bildirimde bulunun.
		</note>
	</report>

	<report id="Test" mail="mex" sms="mex">
		<name>Test Rapouru</name>
		<executeList>
			<cmd>C2</cmd>
			<cmd>UpTime</cmd>
		</executeList>
		<note>Test note satırı</note>
	</report>
</reports>