<?xml version="1.0" encoding="UTF-8"?>
<reports>
	<report name="RptDaily" mail="me">
		<title>KMSH/FÜS Bildirim Raporu</title>
		<executeList>
			<cmd>cmd2.4</cmd>
			<cmd>Uptime</cmd>
			<cmd>cmd2.1</cmd>
			<cmd>cmd2.2</cmd>
			<cmd>cmd2.3</cmd>
			<cmd>sql1.1</cmd>
			<cmd>sql1.2</cmd>
			<cmd>sql1.3</cmd>
			<cmd>cmd1.1</cmd>
			<cmd>cmd1.2</cmd>
			<cmd>cmd1.3</cmd>
		</executeList>
	</report>

	<report name="KMSHStopped" mail="me" sms="mex">
		<title>KMSH/FÜS Stopped</title>
		<executeList>
			<cmd>cmd2.4</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd2.4">(.*)stopped(.*)</condition>
		</reportCondition>
	</report>

	<report name="KMSHStarted" mail="me" sms="mex">
		<title>KMSH/FÜS Started</title>
		<executeList>
			<cmd>cmd2.4</cmd>
		</executeList>
		<reportCondition>
			<condition check="cmd2.4">(.*)running(.*)</condition>
		</reportCondition>
	</report>

	<report name="PartitionControl" mail="me" sms="mex">
		<title>KMSH Partition Hatası !!!</title>
		<executeList>
			<cmd>cmd1.13</cmd>
		</executeList>
		<reportCondition>
			<postcondition check="cmd1.13">(.*)Partition error(.*)
			</postcondition>
		</reportCondition>
		<note>Not: Acil olarak mustafa.samatli@turktelekom.com.tr'ye e-mail
			ile bildirimde bulunun.
		</note>
	</report>

	<report name="Test" mail="me" sms="mex">
		<title>Test Rapouru</title>
		<executeList>
			<cmd>sql2.1</cmd>
			<cmd>UpTime</cmd>
		</executeList>
		<note>Test note satırı</note>
	</report>
</reports>